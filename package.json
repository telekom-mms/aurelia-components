{
	"name": "t-systems-aurelia-components",
	"version": "2.0.1",
	"description": "Common useful components for the Aurelia 2 framework",
	"repository": "https://github.com/telekom-mms/aurelia-components.git",
	"author": "Mike Reiche <mike@reiche.world>",
	"scripts": {
		"build": "tsc",
		"webpack": "webpack --mode=production",
		"test": "jest"
	},
	"license": "MIT",
	"devDependencies": {
		"@aurelia/i18n": "^2.0.0-beta.19",
		"@aurelia/platform-browser": "^2.0.0-beta.19",
		"@aurelia/testing": "^2.0.0-beta.19",
		"@aurelia/ts-jest": "^2.0.0-beta.19",
		"@types/bootstrap": "^5.1.12",
		"@types/jest": "^27.4.1",
		"@types/sanitize-html": "^2.6.2",
		"apexcharts": "^3.49.1",
		"aurelia": "^2.0.0-beta.19",
		"echarts": "^5.5.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"jest-transform-stub": "^2.0.0",
		"moment": "^2.30.1",
		"momentjs": "^2.0.0",
		"sanitize-html": "^2.13.0",
		"ts-node": "^10.7.0",
		"tslib": "^2.6.3",
		"typescript": "^5.4.5"
	},
	"peerDependencies": {
		"apexcharts": "^3.49.1",
		"bootstrap": "^5.1.3",
		"echarts": "^5.5.0",
		"moment": "^2.30.1",
		"moment-duration-format": "^2.3.2",
		"sanitize-html": "^2.13.0",
		"ts-md5": "^1.2.7"
	},
	"peerDependenciesMeta": {
		"apexcharts": {
			"optional": true
		},
		"aurelia-templating": {
			"optional": true
		},
		"aurelia-validation": {
			"optional": true
		},
		"bootstrap": {
			"optional": true
		},
		"echarts": {
			"optional": true
		},
		"moment": {
			"optional": true
		},
		"moment-duration-format": {
			"optional": true
		},
		"ts-md5": {
			"optional": true
		},
		"sanitize-html": {
			"optional": true
		}
	},
	"jest": {
		"testMatch": [
			"<rootDir>/test/**/*.spec.ts"
		],
		"testEnvironment": "jsdom",
		"transform": {
			"\\.(css|less|sass|scss|styl|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub",
			"\\.(ts|html)$": "@aurelia/ts-jest"
		},
		"collectCoverage": true,
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!src/**/*.d.ts"
		]
	}
}
